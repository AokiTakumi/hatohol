<VirtualHost *:80>
    DocumentRoot /path/to/hatohol
    <Directory /path/to/hatohol>
        Order deny,allow
        Allow from all
    </Directory>

    Alias /static/ /path/to/hatohol/static/
    <Directory /path/to/hatohol/static>
        Order deny,allow
        Allow from all
    </Directory>

    WSGIScriptAlias / /path/to/hatohol/conf/apache/django.wsgi
</VirtualHost>
